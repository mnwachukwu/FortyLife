@using FortyLife.App
@{
    var version = typeof(MvcApplication).Assembly.GetName().Version.ToString();
    version = version.Substring(0, version.Length - 5);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Forty Life</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/Images/CommanderSetIconMythicRare.png" width="30" height="30" alt="Commander Icon" />
                Forty Life
            </a>

            <div class="navbar-collapse collapse">
                @Html.Partial("_Search")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content pt-3">
        @Html.Partial("_LotusModal")
        @Html.Raw(TempData["AlertMsg"])
        @RenderBody()

        <hr class="bg-secondary" />

        <footer>
            <p>&copy; 2016 - @DateTime.Now.Year <a href="https://tm14.net/">Studio TM14</a>. Version @version <span class="float-right">Forty Life is an <a href="https://github.com/mnwachukwu/FortyLife">open-source</a> project.</span></p>

            <p>Magic: The Gathering is &trade; & &copy; 1993 - @DateTime.Now.Year Wizards of the Coast, Inc, a subsidiary of Hasbro, Inc. All rights reserved. This site is unaffiliated. Comments are user-submitted and do not represent official endorsements of this site.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sitejs")
    @RenderSection("scripts", required: false)
</body>
</html>
